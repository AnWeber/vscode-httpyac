{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDirs": ["src", "./node_modules/httpyac/src"],
		"strict": true,
	  "noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules", "dist", "webpack.config.js"
	]
}
